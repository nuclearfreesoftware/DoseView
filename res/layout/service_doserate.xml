<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/left_column"
        android:layout_width="@dimen/glass_card_left_column_width"
        android:layout_height="match_parent"
        >
	
        <TextView
        android:id="@+id/text_left_column"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="-10px"
        android:textSize="160px"
        android:gravity="center" />
        	
        <!-- Put widgets for the left column inside this RelativeLayout. -->

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/glass_card_body_height"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/glass_card_two_column_margin"
        android:layout_marginRight="@dimen/glass_card_margin"
        android:layout_marginTop="@dimen/glass_card_margin"
        android:layout_marginBottom="@dimen/glass_card_footer_margin"
        android:layout_toRightOf="@+id/left_column"
        tools:ignore="UselessLeaf"
        >

        <TextView
        android:id="@+id/dose_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="70px"
        android:gravity="center" />
        
        <TextView
        android:id="@+id/status_text_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dose_rate"
        android:textSize="20px"
        android:gravity="left" />
        
        <TextView
        android:id="@+id/data_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status_text_info"
        android:textSize="40px"
        android:gravity="left" />
        
        <TextView
        android:id="@+id/data_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/data_date"
        android:textSize="40px"
        android:gravity="center" />
        
        <!-- Put widgets for the right column inside this RelativeLayout. -->

    </RelativeLayout>






</RelativeLayout>

